<cfsetting enablecfoutputonly=true><!---	Name         : layout.cfm	Author       : Raymond Camden 	Created      : June 02, 2004	Last Updated : August 27, 2005	History      : removed mappings (rkc 8/27/05)	Purpose		 : Loads up templates. Will look in a subdirectory for templates, 				   and will load #attributes.template#_header.cfm and 				   #attributes.template#_footer.cfm---><!--- Because "template" is a reserved attribute for cfmodule, we allow templatename as well. ---><cfif Event.valueExists("templatename")>	<cfset Event.setValue("template", Event.getValue("templatename"))></cfif><cfset base = Event.getValue("template")><!--- Header ---><cfset myFile = base & "_header"><!--- Page Templates ---><cfoutput>#renderView("pagetemplates/" & myFile)#</cfoutput><!--- Render The View. This is set wherever you want in your Layout. ---><cfoutput>#renderView()#</cfoutput><!--- Footer ---><cfset myFile = base & "_footer"><!--- Page Templates ---><cfoutput>#renderView("pagetemplates/" & myFile)#</cfoutput><cfsetting enablecfoutputonly=false>